{% extends "base.html.twig" %}
{#{% block header %}
    
{% endblock header %}#}

{% block sidebar %}
    <div id="sidebar-wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <i class="fa fa-close"></i>
                <h5>Selector de capas</h5>
            </div>
            <ul id="layers" class="list-unstyled">
            </ul>
        </nav>
    </div>       
{% endblock sidebar %}

{% block map %}
    <div id="map-wrapper">
        <div id="map">

        </div>
    </div>
    <div id="interactions-wrapper">
        <div id="interactions" class="unlocked">
            <span id="lock"><i class="fa fa-unlock-alt"></i></span>
            <div id="measurements">
                <span id="length"><i class="fa fa-ruler"></i></span>
                <span id="area"><i class="fa fa-area-chart"></i></span>
            </div>
            <div id="selection">
                {#<span id="Point"><i class="fa fa-ruler"></i></span>
                <span id="LineString"><i class="fa fa-user"></i></span>#}
                <span id="Polygon"><i class="fa fa-chart-area"></i></span>
                    {#            <span id="Circle"><i class="fa fa-user"></i></span>#}
                    {#                    <span id="None"><i class="fa fa-user"></i></span>#}
            </div>
            <div id="popup">
                <span id="coordinate"><i class="fa fa-map-marker"></i></span>
            </div>
        </div>
    </div>
{% endblock map %}

{% block queries %}
    <div id="query">
        {#<table class="table table-bordered table-hover">
            <thead></thead>
            <tbody></tbody>
        </table>#}
{#        <div id="query-placeholder"></div>#}
        <div id="buttons">
            <button id="query-close" class="query-button"><i class="fa fa-window-close-o"></i></button>
            <button id="query-minimize" class="query-button"><i class="fa fa-window-minimize"></i></button>
        </div>
        <div id="query-title"></div>
    </div>
{% endblock queries %}

{% block legend %}
