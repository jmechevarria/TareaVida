                <li id="I" class="list-group-item">Categor&iacute;a I</li>
                <li id="II" class="list-group-item">Categor&iacute;a II</li>
                <li id="III" class="list-group-item">Categor&iacute;a III</li>
                <li id="IV" class="list-group-item">Categor&iacute;a IV</li>
            </ul>
        </div>
    </div>
    {#<div id="legend">
        <div class="suelo_afectado">
