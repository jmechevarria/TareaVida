{% extends 'UserBundle::layout.html.twig' %}

{% block title %}{{parent()}} | Datos de {{entity}}{% endblock title %}

{% block content %}
    <h1>Usuario: {{entity}}</h1>
    <div class="row-fluid">
        <div class="span10">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th>Nombre</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Apellidos</th>
                        <td>{{ entity.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Usuario</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                    <tr>
                        <th>Rol</th>
                        <td>{{ entity.role }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="span2">
            <ul class="nav nav-list options-menu">
                <li class="nav-header">
                <center><i class="fa-cog fa-white"></i> Acciones</center>
                </li>
                <li>
                    <a href="{{ path('user') }}">
                        <i class="fa-th-list"></i> Ver lista
                    </a>
                </li>
                <li>
                    <a href="{{ path('user_edit',{'id' : entity.id}) }}">
                        <i class="fa-edit"></i> Editar
                    </a>
                </li>
                <li>
                    <a href="{{ path('user_new') }}">
                        <i class="fa-asterisk"></i> Nuevo
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
