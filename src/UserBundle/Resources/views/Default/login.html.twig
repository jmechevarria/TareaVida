{% extends 'UserBundle::layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset ('css/login.css') }}"/>
{% endblock %}
{% block title %}Formulario de acceso{% endblock %}
{% block body %}
    <form id="login-form" action="{{ path('user_login_check') }}" method="post" class="form-inline">
        {% if error is defined and error %}
            <div class="row-fluid alert-error">{#{{ error.message }}#}Credenciales incorrectas
                <a class="close" {#data-dismiss="alert"#} href="#">&times;</a>
            </div>
	    <br>
        {% endif %}
        <div class="row-fluid" style="width: 100%">
            <input type="text" class="input-small" placeholder="Usuario" id="username" name="_username"
                   value="{{ last_username }}">
            <input type="password" class="input-small" placeholder="Clave" id="password" name="_password">
            <button type="submit" class="btn" name="login">Acceder</button>
        </div>
        <div class="row-fluid">
            {#            <label class="checkbox">#}
            {#                <input type="checkbox"> Remember me#}
            {#            </label>#}
        </div>
    </form>
{% endblock %}
{% block aside %}{% endblock %}
