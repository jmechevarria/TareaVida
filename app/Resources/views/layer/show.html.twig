{% extends 'base.html.twig' %}

{% block body %}
    <h1>Layer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ layer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ layer.name }}</td>
            </tr>
            <tr>
                <th>Friendlyname</th>
                <td>{{ layer.friendlyname }}</td>
            </tr>
            <tr>
                <th>Background</th>
                <td>{{ layer.background }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ layer.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tareavida_layer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tareavida_layer_edit', { 'id': layer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
